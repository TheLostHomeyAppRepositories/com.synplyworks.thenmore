{
  "id": "com.synplyworks.thenmore",
  "sdk": 2,
  "name": {
    "en": "Then More"
  },
  "description": {
    "en": "Adds More functionality in the Then clause of your flows"
  },
  "permissions": [
    "homey:manager:api"
  ],
  "category": ["lights"],
  "version": "0.1.0",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Leon Ree",
    "email": "leon@synplyworks.com"
  },
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },

  "flow": {

    "actions": [
      {
        "id": "then_more_on_off",
        "title": {
          "en": "Countdown Enabled",
          "nl": "Zandloper ingeschakeld"
        },
        "hint": {
          "en": "With this action you can keep your device enabled for some time",
          "nl": "Met deze actie kan je je apparaat een tijd ingeschakeld houden"
        },
        "args": [
          {
            "name": "device",
            "type": "autocomplete"
          },
          {
            "name": "enable",
            "type": "dropdown",
            "values": [ { "id": "on", "label": { "en": "On" } }, { "id": "off", "label": { "en": "Off" } } ]
          }
        ]
      },
      {
        "id": "then_more_dim",
        "title": {
          "en": "Countdown Enabled Dim",
          "nl": "Zandloper ingeschakeld Dim"
        },
        "hint": {
          "en": "With this action you can keep your device enabled for some time",
          "nl": "Met deze actie kan je je apparaat een tijd ingeschakeld houden"
        },
        "args": [
          {
            "name": "device",
            "type": "autocomplete"
          },
          {
            "name": "set_forced_brightness_level",
            "type": "range",
            "min": 0,
            "max": 1,
            "step": 0.01,
            "label": "%",
            "labelMultiplier": 100
          }
        ]
      }
    ]
  }

}